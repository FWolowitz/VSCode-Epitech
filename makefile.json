	"cmakefile": {
		"prefix": "cmakefile",
		"body": [
			"CC\t=\tgcc",
			"",
			"RM\t=\trm -f",
			"",
			"SRC\t=\t${1:File}.c",
			"",
			"OBJ\t=\t$(SRC:.c=.o)",
			"",
			"CFLAGS\t=\t-Iinclude -Wall -Wextra -Werror",
			"",
			"NAME\t=\t${2:Binary Name}",
			"",
			"all:\t\t$(NAME)",
			"",
			"$(NAME):\t$(OBJ)",
			"\t\t$(CC) $(OBJ) -o $(NAME)",
			"",
			"clean:",
			"\t\t$(RM) $(OBJ)",
			"",
			"fclean:\t\tclean",
			"\t\t$(RM) $(NAME)",
			"",
			"re:\t\tfclean all",
			"",
			".PHONY: all clean fclean re"
		],
		"description": "Code snippet for C Makefile"
	},
